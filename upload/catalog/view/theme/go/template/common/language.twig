{% if languages|length > 1 %}
    <div class="btn-group mb-2">
        <div class="dropdown-toggle p-2 text-center d-flex align-items-center p-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {% for language in languages %}
                {% if language.code == code %}
                    <img class="mr-2" src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}">
                {% endif %}
            {% endfor %}
            <span class="d-none d-md-inline">{{ text_language }} </span><i class="material-icons">expand_more</i>
        </div>
        <div class="dropdown-menu">
            {% for language in languages %}
                <a href="{{ language.href }}" class="dropdown-item"><img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}"/> {{ language.name }}</a>
            {% endfor %}
        </div>
    </div>
{% endif %}