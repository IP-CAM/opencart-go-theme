<div class="sidebar">
    <div class="text-center">
        {% if logged %}
            <div class="figure-menu shadow">
                <figure><img src="{{ customer.image }}" alt=""></figure>
            </div>
            <h5 class="mb-1 ">{{ customer.firstname }} {{ customer.lastname }}</h5>
        {% else %}
            <div class="mb-5"></div>
            <script async src="https://telegram.org/js/telegram-widget.js?8" data-telegram-login="{{ telegram_bot }}"
                    data-size="large" data-userpic="false"
                    data-auth-url="{{ telegram_redirect_url }}"
                    data-request-access="write"></script>
        {% endif %}
    </div>
    <br>
    <div class="row mx-0">
        <div class="col">
            <h5 class="subtitle text-uppercase"><span>Menu</span></h5>
            <div class="list-group main-menu">
                <a href="{{ home_href }}" class="list-group-item list-group-item-action active">Home</a>
                {% if logged %}
                    <a href="index.php?route=account/order" class="list-group-item list-group-item-action">My Order</a>
                    <a href="index.php?route=account/account" class="list-group-item list-group-item-action">My
                        Profile</a>
                    <a href="index.php?route=account/logout"
                       class="list-group-item list-group-item-action mt-4">Logout</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
